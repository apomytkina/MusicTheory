<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".account.PersonalAccountTitleFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/title_tv"
                android:textSize="@dimen/text_title_size_personal_account"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal_account_title_left_margin"
                android:layout_alignParentLeft="true"
                android:text="@string/personal_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/back_button"
                android:text="@string/personal_account_back_button"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/personal_account_title_right_margin"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/back_button_account_title_width"
                android:layout_height="@dimen/back_button_account_title_height" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>