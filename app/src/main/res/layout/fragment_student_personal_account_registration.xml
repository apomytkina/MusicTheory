<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".account.student.registration.StudentPersonalAccountRegistrationFragment">

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/registration_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:name="com.example.musictheory.account.PersonalAccountTitleFragment"
            app:layout_constraintBottom_toTopOf="@+id/title_gl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/title_gl"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.15"
            />

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/registration_body"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:name="com.example.musictheory.account.student.registration.StudentRegistrationFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_gl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>