    </style>

    <style name="Button.DontKnowButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
<!--        <item name="materialThemeOverlay">@style/VioletButtonThemeOverlay</item>-->
